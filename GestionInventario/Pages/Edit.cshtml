@page "{id:int}"
@model EditModel
@{
    ViewData["Title"] = "Editar producto";
}
<h2>Editar Producto</h2>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <label for="Nombre">Nombre del Producto</label>
        <input type="text" class="form-control" id="Nombre" asp-for="Product.Nombre" required>
        <span asp-validation-for="Product.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripcion del Producto</label>
        <input type="text" class="form-control" id="Descripcion" asp-for="Product.Descripcion" required>
        <span asp-validation-for="Product.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Stock">Cantidad</label>
        <input type="number" class="form-control" id="Stock" asp-for="Product.Stock" required>
        <span asp-validation-for="Product.Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="text" class="form-control" id="Precio" asp-for="Product.Precio" required>
        <span asp-validation-for="Product.Precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Categoria">Categoría</label>
        <select class="form-control" id="Categoria" asp-for="Product.CategoriaId" required>
            <option value="">Seleccione una categoría</option>
            @foreach (var categoria in Model.Categorias)
            {
                <option value="@categoria.Id">@categoria.Nombre</option>
            }
        </select>
        <span asp-validation-for="Product.CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>