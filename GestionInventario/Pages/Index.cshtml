@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio - Gestor de Inventario";
}

<div class="py-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Bienvenido al Gestor de Inventario</h2>
            <p>Administra tu inventario de manera eficiente y fácil.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 d-flex justify-content-end align-content-center">
            <button onclick="location.href='/ManageInventory'" class="btn btn-primary" type="button">Agregar Nuevo Producto</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Inventario Actual</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Categoria</th>
                        <th>Precio</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in Model.Productos)
                    {
                        <tr>
                            <td>@producto.Id</td>
                            <td>@producto.Nombre</td>
                            <td>@producto.Stock</td>
                            <td>@producto.Categoria.Nombre</td>
                            <td>@producto.Precio.ToString("C")</td>
                            <td class="d-flex flex-row gap-2">
                                <a href="/Edit/@producto.Id" class="btn btn-success">Editar</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@producto.Id" onsubmit="return confirm('¿Estás seguro de querer eliminar este producto?');">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function() {
        // Interactividad con jQuery
    });
    </script>
}
